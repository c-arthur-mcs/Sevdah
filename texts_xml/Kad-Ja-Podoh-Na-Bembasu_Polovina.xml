    <body>
        <lg>
            <l>
                <origin lang="slavic">Кад</origin>
                <origin lang="slavic">ја</origin>
                <origin lang="slavic">пођох</origin>
                <origin lang="slavic">на</origin>
                <origin lang="turkic">Бембашу,</origin>
            </l>
            <l>
                <origin lang="slavic">На</origin>
                <origin lang="turkic">Бембашу</origin>
                <origin lang="slavic">на</origin>
                <origin lang="slavic">воду,</origin>
            </l>
            <l>
                <origin lang="slavic">Ја</origin>
                <origin lang="slavic">поведох</origin>
                <origin lang="slavic">бјело</origin>
                <origin lang="slavic">јање,</origin>
            </l>
            <l>
                <origin lang="slavic">Бјело</origin>
                <origin lang="slavic">јање</origin>
                <origin lang="slavic">са</origin>
                <origin lang="slavic">собом,</origin>
            </l>
            <l>
                <origin lang="slavic">Ја</origin>
                <origin lang="slavic">поведох</origin>
                <origin lang="slavic">бјело</origin>
                <origin lang="slavic">јање,</origin>
            </l>
            <l>
                <origin lang="slavic">Бјело</origin>
                <origin lang="slavic">јање</origin>
                <origin lang="slavic">са</origin>
                <origin lang="slavic">собом.</origin>
            </l>
        </lg>


        <lg>
            <l>
                <origin lang="slavic">Све</origin>
                <origin lang="slavic">дјевојке</origin>
                <origin lang="turkic">Бембашанке,</origin>
            </l>
            <l>
                <origin lang="slavic">На</origin>
                <origin lang="turkic">капији</origin>
                <origin lang="slavic">стајаху,</origin>
            </l>
            <l>
                <origin lang="slavic">Само</origin>
                <origin lang="slavic">моја</origin>
                <origin lang="slavic">мила</origin>
                <origin lang="slavic">драга</origin>
            </l>
            <l>
                <origin lang="slavic">На</origin>
                <origin lang="turkic">демирли</origin>
                <origin lang="turkic">пенџеру.</origin>
            </l>
            <l>
                <origin lang="slavic">Само</origin>
                <origin lang="slavic">моја</origin>
                <origin lang="slavic">мила</origin>
                <origin lang="slavic">драга</origin>
            </l>
            <l>
                <origin lang="slavic">На</origin>
                <origin lang="turkic">демирли</origin>
                <origin lang="turkic">пенџеру.</origin>
            </l>
        </lg>

        <lg>
            <l>
                <origin lang="slavic">Ја</origin>
                <origin lang="slavic">јој</origin>
                <origin lang="slavic">рек'о</origin>
                <origin lang="slavic">добра</origin>
                <origin lang="slavic">вече</origin>
            </l>
            <l>
                <origin lang="slavic">Добра</origin>
                <origin lang="slavic">вече</origin>
                <origin lang="slavic">дјевоче</origin>
            </l>
            <l>
                <origin lang="slavic">Она</origin>
                <origin lang="slavic">мени</origin>
                <origin lang="slavic">дођ'</origin>
                <origin lang="slavic">довече,</origin>
            </l>
            <l>
                <origin lang="slavic">Дођ'</origin>
                <origin lang="slavic">довече</origin>
                <origin lang="turkic">дилберче,</origin>
            </l>
            <l>
                <origin lang="slavic">Она</origin>
                <origin lang="slavic">мени</origin>
                <origin lang="slavic">дођ'</origin>
                <origin lang="slavic">довече,</origin>
            </l>
            <l>
                <origin lang="slavic">Дођ'</origin>
                <origin lang="slavic">довече</origin>
                <origin lang="turkic">дилберче.</origin>
            </l>
        </lg>

        <lg>
            <l>
                <origin lang="slavic">Ја</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">одох</origin>
                <origin lang="slavic">исто</origin>
                <origin lang="slavic">вече</origin>
            </l>
            <l>
                <origin lang="slavic">Већ</origin>
                <origin lang="slavic">ја</origin>
                <origin lang="slavic">одох</origin>
                <origin lang="slavic">рудила,</origin>
            </l>
            <l>
                <origin lang="slavic">Другог</origin>
                <origin lang="slavic">дана,</origin>
                <origin lang="slavic">моја</origin>
                <origin lang="slavic">драга,</origin>
            </l>
            <l>
                <origin lang="slavic">За</origin>
                <origin lang="slavic">другог</origin>
                <origin lang="slavic">се</origin>
                <origin lang="slavic">удала,</origin>
            </l>
            <l>
                <origin lang="slavic">Другог</origin>
                <origin lang="slavic">дана,</origin>
                <origin lang="slavic">моја</origin>
                <origin lang="slavic">драга,</origin>
            </l>
            <l>
                <origin lang="slavic">За</origin>
                <origin lang="slavic">другог</origin>
                <origin lang="slavic">се</origin>
                <origin lang="slavic">удала.</origin>
