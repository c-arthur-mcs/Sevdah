    <meta>
        <title>
            <title_bs>Да сам птица</title_bs>
            <title_en>If I Were a Bird</title_en>
        </title>
        <author type="performer" lat="Silvana Armenulić">Силвана Арменулић</author>
        <author type="poet" lat="Mustafa Mujezinović">Мустафа Мујезиновић</author>
