    </meta>
    <body>
        <lg>
            <l>
                <origin lang="slavic">Да</origin>
                <origin lang="slavic">сам</origin>
                <origin lang="slavic">птица</origin>
                <origin lang="slavic">и</origin>
                <origin lang="slavic">да</origin>
                <origin lang="slavic">имам</origin>
                <origin lang="slavic">крила</origin>
            </l>
            <l>
                <origin lang="slavic">Ја</origin>
                <origin lang="slavic">бих</origin>
                <origin lang="slavic">цијелу</origin>
                <origin lang="slavic">Босну</origin>
                <origin lang="slavic">прелетила</origin>
            </l>
            <l>
                <origin lang="slavic">Летила</origin>
                <origin lang="slavic">бих,</origin>
                <origin lang="slavic">никад</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">бих</origin>
                <origin lang="slavic">стала</origin>
            </l>
            <l>
                <origin lang="slavic">Док</origin>
                <origin lang="slavic">се</origin>
                <origin lang="slavic">Босне</origin>
                <origin lang="slavic">бе</origin>
                <origin lang="slavic">бих</origin>
                <origin lang="slavic">нагледала</origin>
            </l>
            <l>
                <origin lang="slavic">Летила</origin>
                <origin lang="slavic">бих,</origin>
                <origin lang="slavic">никад</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">бих</origin>
                <origin lang="slavic">стала</origin>
            </l>
            <l>
                <origin lang="slavic">Док</origin>
                <origin lang="slavic">се</origin>
                <origin lang="slavic">Босне</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">бих</origin>
                <origin lang="slavic">нагледала</origin>
            </l>
        </lg>

        <lg>
            <l>
                <origin lang="slavic">Над</origin>
                <origin lang="slavic">Босном</origin>
                <origin lang="slavic">се</origin>
                <origin lang="slavic">планине</origin>
                <origin lang="slavic">извиле</origin>
            </l>
            <l>
                <origin lang="slavic">Зеленилом</origin>
                <origin lang="slavic">сву</origin>
                <origin lang="slavic">је</origin>
                <origin lang="slavic">откитиле</origin>
            </l>
            <l>
                <origin lang="slavic">Цвјетај</origin>
                <origin lang="slavic">Босно,</origin>
                <origin lang="slavic">у</origin>
                <origin lang="greek">мирису</origin>
                <origin lang="slavic">руди</origin>
            </l>
            <l>
                <origin lang="slavic">Из</origin>
                <origin lang="slavic">теби</origin>
                <origin lang="slavic">ја</origin>
                <origin lang="slavic">да</origin>
                <origin lang="slavic">напајам</origin>
                <origin lang="slavic">груди</origin>
            </l>
            <l>
                <origin lang="slavic">Цвјетај</origin>
                <origin lang="slavic">Босно,</origin>
                <origin lang="slavic">у</origin>
                <origin lang="greek">мирису</origin>
                <origin lang="slavic">руди</origin>
            </l>
            <l>
                <origin lang="slavic">Из</origin>
                <origin lang="slavic">теби</origin>
                <origin lang="slavic">ја</origin>
                <origin lang="slavic">да</origin>
                <origin lang="slavic">напајам</origin>
                <origin lang="slavic">груди</origin>
            </l>
        </lg>

        <lg>
            <l>
                <origin lang="slavic">Увијек</origin>
                <origin lang="slavic">си</origin>
                <origin lang="slavic">ми</origin>
                <origin lang="slavic">као</origin>
                <origin lang="slavic">што</origin>
                <origin lang="slavic">си</origin>
                <origin lang="slavic">била</origin>
            </l>
            <l>
                <origin lang="slavic">Сва</origin>
                <origin lang="slavic">зелена,</origin>
                <origin lang="slavic">весела</origin>
                <origin lang="slavic">и</origin>
                <origin lang="slavic">мила</origin>
            </l>
            <l>
                <origin lang="slavic">Твоја</origin>
                <origin lang="slavic">пјесма</origin>
                <origin lang="slavic">нек'</origin>
                <origin lang="slavic">те</origin>
                <origin lang="slavic">uувијек</origin>
                <origin lang="slavic">краси</origin>
            </l>
            <l>
                <origin lang="slavic">Здараво</origin>
                <origin lang="slavic">Босно,</origin>
                <origin lang="slavic">увијек</origin>
                <origin lang="slavic">здраво</origin>
                <origin lang="slavic">да</origin>
                <origin lang="slavic">си</origin>
            </l>
            <l>
                <origin lang="slavic">Твоја</origin>
                <origin lang="slavic">пјесма</origin>
                <origin lang="slavic">нек'</origin>
                <origin lang="slavic">т</origin>
                <origin lang="slavic">увијек</origin>
                <origin lang="slavic">краси</origin>
            </l>
            <l>
                <origin lang="slavic">Здраво</origin>
                <origin lang="slavic">Босно,</origin>
                <origin lang="slavic">увијек</origin>
                <origin lang="slavic">здраво</origin>
                <origin lang="slavic">да</origin>
                <origin lang="slavic">си</origin>
            </l>
        </lg>
