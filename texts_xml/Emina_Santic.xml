<poem uid="as..003">
    <meta>
        <title>
            <title_bs>Емина</title_bs>
            <title_en>Emina</title_en>
        </title>
        <author type="poet" lat="Aleksa Šantič">Алекса Шантић</author>
        <year>1901</year>
        <desc>Text originally written in Bosnian Cyrillic. Published in Kolo, 1901.</desc>
        <url>https://archive.org/details/kolo00ivgoog/page/134/mode/2up</url>
    </meta>
    <body>
        <lg>
            <l>
                <origin lang="slavic">Синоћ,</origin>
                <origin lang="slavic">кад</origin>
                <origin lang="slavic">се</origin>
                <origin lang="slavic">вратих</origin>
                <origin lang="slavic">из</origin>
                <origin lang="slavic">топла</origin>
                <origin lang="slavic">амама,</origin>
            </l>
            <l>
                <origin lang="slavic">Прођох</origin>
                <origin lang="slavic">покрај</origin>
                <origin lang="turkic">баште</origin>
                <origin lang="turkic">Абдула</origin>
                <origin lang="turkic">имама;</origin>
            </l>
            <l>
                <origin lang="slavic">Кад</origin>
                <origin lang="slavic">у</origin>
                <origin lang="turkic">башти,</origin>
                <origin lang="slavic">тамо,</origin>
                <origin lang="slavic">гдје</origin>
                <origin lang="greek">мирипе</origin>
                <origin lang="turkic">игда,</origin>
            </l>
            <l>
                <origin lang="slavic">Гдје</origin>
                <origin lang="slavic">'но</origin>
                <origin lang="turkic">булбул-</origin>
                <origin lang="slavic">пјесма</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">престаја</origin>
                <origin lang="slavic">нигда,</origin>
            </l>
            <l>
                <origin lang="slavic">Гдје</origin>
                <origin lang="turkic">шедрван</origin>
                <origin lang="slavic">прска</origin>
                <origin lang="slavic">у</origin>
                <origin lang="slavic">хладу</origin>
                <origin lang="turkic">јасмина,</origin>
            </l>
            <l>
                <origin lang="slavic">С</origin>
                <origin lang="greek">кондиром</origin>
                <origin lang="slavic">у</origin>
                <origin lang="slavic">руци</origin>
                <origin lang="slavic">стојаше</origin>
                <origin lang="turkic">Емнина.</origin>
            </l>
            <l>
                <origin lang="slavic">Ја,</origin>
                <origin lang="slavic">каква</origin>
                <origin lang="slavic">је,</origin>
                <origin lang="slavic">пуста,</origin>
                <origin lang="slavic">тако</origin>
                <origin lang="slavic">ми</origin>
                <origin lang="turkic">амана,</origin>
            </l>
            <l>
                <origin lang="slavic">Стид</origin>
                <origin lang="slavic">је</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">би</origin>
                <origin lang="slavic">било</origin>
                <origin lang="slavic">да</origin>
                <origin lang="slavic">је</origin>
                <origin lang="slavic">код</origin>
                <origin lang="turkic">Султана!</origin>
            </l>
            <l>
                <origin lang="slavic">Та,</origin>
                <origin lang="slavic">када</origin>
                <origin lang="slavic">би</origin>
                <origin lang="turkic">Султан</origin>
                <origin lang="slavic">за</origin>
                <origin lang="turkic">Еминну</origin>
                <origin lang="slavic">знао,</origin>
            </l>
            <l>
                <origin lang="slavic">Би,</origin>
                <origin lang="turkic">валахи,</origin>
                <origin lang="slavic">за</origin>
                <origin lang="slavic">њу</origin>
                <origin lang="slavic">сто</origin>
                <origin lang="slavic">робиња</origin>
                <origin lang="slavic">дао!</origin>
            </l>
            <l>
                <origin lang="slavic">Та</origin>
                <origin lang="slavic">љепша</origin>
                <origin lang="slavic">је,</origin>
                <origin lang="slavic">болан,</origin>
                <origin lang="slavic">од</origin>
                <origin lang="slavic">свих</origin>
                <origin lang="turkic">Шамских</origin>
                <origin lang="slavic">була,</origin>
            </l>
            <l>
                <origin lang="slavic">А</origin>
                <origin lang="slavic">бјеља</origin>
                <origin lang="slavic">је,</origin>
                <origin lang="turkic">бели,</origin>
                <origin lang="slavic">од</origin>
                <origin lang="slavic">бијелих</origin>
                <origin lang="turkic">ђула!</origin>
            </l>
            <l>
                <origin lang="slavic">Па</origin>
                <origin lang="turkic">још</origin>
                <origin lang="slavic">када</origin>
                <origin lang="slavic">шеће</origin>
                <origin lang="slavic">и</origin>
                <origin lang="slavic">плећима</origin>
                <origin lang="slavic">креће.</origin>
                <origin lang="n/a">...</origin>
            </l>
            <l>
                <origin lang="n/a">-</origin>
                <origin lang="slavic">Ни</origin>
                <origin lang="turkic">хоџин</origin>
                <origin lang="slavic">ми</origin>
                <origin lang="slavic">запис</origin>
                <origin lang="slavic">више</origin>
                <origin lang="slavic">помоћ</origin>
                <origin lang="slavic">неће!</origin>
                <origin lang="n/a">...</origin>
            </l>
            <l>
                <origin lang="slavic">Ја</origin>
                <origin lang="slavic">јој</origin>
                <origin lang="slavic">назвах</origin>
                <origin lang="turkic">селам,</origin>
                <origin lang="slavic">ал',</origin>
                <origin lang="slavic">мога</origin>
                <origin lang="slavic">ми</origin>
                <origin lang="slavic">дина,</origin>
            </l>
            <l>
                <origin lang="slavic">Нешће</origin>
                <origin lang="slavic">ни</origin>
                <origin lang="slavic">да</origin>
                <origin lang="slavic">чује</origin>
                <origin lang="slavic">лијепа</origin>
                <origin lang="turkic">Емина,</origin>
            </l>
            <l>
                <origin lang="slavic">Но</origin>
                <origin lang="slavic">у</origin>
                <origin lang="slavic">златан</origin>
                <origin lang="turkic">пондир</origin>
                <origin lang="slavic">ухитила</origin>
                <origin lang="slavic">воде</origin>
            </l>
            <l>
                <origin lang="slavic">Па</origin>
                <origin lang="slavic">по</origin>
                <origin lang="turkic">башти</origin>
                <origin lang="turkic">шебој</origin>
                <origin lang="slavic">заљевати</origin>
                <origin lang="slavic">оде;</origin>
            </l>
            <l>
                <origin lang="slavic">Горњак</origin>
                <origin lang="slavic">вјетар</origin>
                <origin lang="slavic">духну</origin>
                <origin lang="slavic">па</origin>
                <origin lang="slavic">низ</origin>
                <origin lang="slavic">плећи</origin>
                <origin lang="slavic">пусте</origin>
            </l>
            <l>
                <origin lang="slavic">Расплјете</origin>
                <origin lang="slavic">јој</origin>
                <origin lang="slavic">оне</origin>
                <origin lang="slavic">плетинице</origin>
                <origin lang="slavic">густе,</origin>
            </l>
            <l>
                <origin lang="greek">Замириса</origin>
                <origin lang="slavic">коса,</origin>
                <origin lang="greek">замириса</origin>
                <origin lang="turkic">башта,</origin>
            </l>
            <l>
                <origin lang="slavic">А</origin>
                <origin lang="slavic">је</origin>
                <origin lang="slavic">се</origin>
                <origin lang="slavic">од</origin>
                <origin lang="turkic">дерта</origin>
                <origin lang="slavic">с</origin>
                <origin lang="turkic">дуњалуком</origin>
                <origin lang="slavic">прашта',</origin>
            </l>
            <l>
                <origin lang="slavic">Мало</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">посрнух,</origin>
                <origin lang="slavic">тако</origin>
                <origin lang="slavic">ми</origin>
                <origin lang="slavic">мог</origin>
                <origin lang="turkic">дина,</origin>
            </l>
            <l>
                <origin lang="slavic">Ал'</origin>
                <origin lang="slavic">мени</origin>
                <origin lang="slavic">не</origin>
                <origin lang="slavic">дође</origin>
                <origin lang="slavic">лијепа</origin>
                <origin lang="turkic">Емина.</origin>
            </l>
            <l>
                <origin lang="slavic">Само</origin>
                <origin lang="slavic">ме</origin>
                <origin lang="slavic">је</origin>
                <origin lang="slavic">једном</origin>
                <origin lang="slavic">погледала</origin>
                <origin lang="slavic">мрко,</origin>
            </l>
            <l>
                <origin lang="slavic">Нити</origin>
                <origin lang="hungarian">хаје,</origin>
                <origin lang="turkic">алчак,</origin>
                <origin lang="slavic">што</origin>
                <origin lang="slavic">за</origin>
                <origin lang="slavic">њоме</origin>
                <origin lang="slavic">црко'!</origin>
                <origin lang="n/a">...</origin>
            </l>
        </lg>
    </body>
</poem>
